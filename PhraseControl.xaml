<UserControl x:Class="Dictee.PhraseControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dictee"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="300">
    <Grid>
        <DockPanel Margin="5" Name="DockCont" Height="60" VerticalAlignment="Center" LostFocus="DockCont_LostFocus">
            <TextBlock Margin="40,0,0,0" Text="" Name="TbPhrase" DockPanel.Dock="Top" FontSize="14"/>
            <Label FontSize="20" Width="40" DockPanel.Dock="Left" VerticalAlignment="Center" Name="NumLine" Content="xxx"/>
            <Button DockPanel.Dock="Right" Content="Ecoute" Width="60" Height="30" VerticalAlignment="Center" Click="Button_Click"/>
            <Label FontSize="20" DockPanel.Dock="Right" VerticalAlignment="Center" Name="NbError" Content="X"/>
            <TextBox VerticalContentAlignment="Center" Name="PhraseBox" TextWrapping="Wrap"/>
        </DockPanel>
    </Grid>
</UserControl>
